rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    function isModerator() {
      return isSignedIn() && (request.auth.token.role == 'admin' || request.auth.token.role == 'moderator');
    }

    match /users/{uid} {
      allow read, update: if isSignedIn() && request.auth.uid == uid;
      allow create: if isSignedIn();
    }

    match /casteMaster/{casteId} {
      allow read: if resource.data.isActive == true;
      allow write: if isAdmin();
    }

    match /subCasteMaster/{subCasteId} {
      allow read: if resource.data.isActive == true;
      allow write: if isAdmin();
    }

    match /swipes/{id} {
      allow write: if isSignedIn() && request.resource.data.fromUid == request.auth.uid;
      allow read: if false;
    }

    match /matches/{id} {
      allow read, write: if isSignedIn() && request.auth.uid in [resource.data.userA, resource.data.userB];
    }

    match /chats/{matchId}/messages/{messageId} {
      allow read, write: if isSignedIn() && request.auth.uid in [request.resource.data.senderUid, resource.data.senderUid];
    }

    match /reports/{reportId} {
      allow create: if isSignedIn() && request.resource.data.reporterUid == request.auth.uid;
      allow read: if isAdmin() || isModerator();
    }

    match /blocks/{blockId} {
      allow write: if isSignedIn() && request.resource.data.blockerUid == request.auth.uid;
      allow read: if false;
    }
  }
}
